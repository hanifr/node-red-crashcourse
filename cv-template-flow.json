    {
        "id": "get_cv_from_flow",
        "type": "function",
        "z": "cv_flow",
        "name": "Get CV from Flow Context",
        "func": "// Retrieve CV data from flow context\nconst cvData = flow.get('cvData');\n\nif (cvData) {\n    msg.payload = cvData;\n    return msg;\n} else {\n    // If no data in context, return sample data\n    msg.payload = {\n        \"title\": \"Professional Title\",\n        \"email\": \"email@example.com\",\n        \"phone\": \"+00-000-0000\",\n        \"address\": \"Your Address Here\",\n        \"skills\": [\"Skill 1\", \"Skill 2\", \"Skill 3\"],\n        \"jobs\": [],\n        \"schools\": [],\n        \"links\": {},\n        \"imageSrc\": \"https://via.placeholder.com/150\"\n    };\n    return msg;\n}",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 380,
        "y": 160,
        "wires": [["cv_template"]]
